<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="50dp"
                android:height="25dp" />
            <stroke
                android:width="2dp"
                android:color="#FF0000" />
        </shape>
    </item>
    <!-- Striped pattern -->
    <item>
        <clip>
            <shape android:shape="oval">
                <size
                    android:width="48dp"
                    android:height="23dp" />
                <solid android:color="#FFFFFF" />
            </shape>
        </clip>
    </item>
    <item>
        <clip>
            <shape android:shape="oval">
                <size
                    android:width="48dp"
                    android:height="23dp" />
                <gradient
                    android:angle="0"
                    android:centerColor="#FF0000"
                    android:endColor="#FF0000"
                    android:startColor="#FF0000"
                    android:type="linear"
                    android:useLevel="false" />
            </shape>
        </clip>
    </item>
</layer-list>