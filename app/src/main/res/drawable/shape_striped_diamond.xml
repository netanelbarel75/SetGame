<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <size
                    android:width="35dp"
                    android:height="35dp" />
                <stroke
                    android:width="2dp"
                    android:color="#00FF00" />
            </shape>
        </rotate>
    </item>
    <!-- In a real implementation, you would create a striped pattern bitmap -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <bitmap
                android:src="@drawable/striped_pattern"
                android:tileMode="repeat" />
            <shape android:shape="rectangle">
                <size
                    android:width="35dp"
                    android:height="35dp" />
            </shape>
        </rotate>
    </item>
</layer-list>